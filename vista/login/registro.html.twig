{# empty Twig template #}
{% extends "index.html.twig" %}

{% block content %}
    <div id="contenido" class="col-12">
        <div class="contenedor">
            <div class="col-12 marco-foto">
                <h1>Registro:</h1>
                <div id="parrafoRegistro">
                    <h7>Todos los campos son obligatorios</h7>
                </div>
                <div id="mensajeRegistro">
                {% if mensajeRegistro != null %}
                    <h2 id="mensajeRegistro">{{ mensajeRegistro }}</h2>
                    <script>
                        $(document).ready(function(){
                            setTimeout(function(){ $("#mensajeRegistro").fadeOut("slow"); }, 5000);
                        });
                            
                    </script>
                {% endif %}
                </div>
                <div id="mensajeRegistroError">
                    {% if mensajeRegistroError != null %}
                        <h2 id="mensajeRegistroError">{{ mensajeRegistroError }}</h2>
                        <script>
                            $(document).ready(function(){
                                setTimeout(function(){ $("#mensajeRegistroError").fadeOut("slow"); }, 5000);
                            });

                        </script>
                    {% endif %}
                </div>
                <div class="contForm">
                    <form action="index.php" method="post" id="crud_users" onsubmit="return validarCliente();">
                        <input type="hidden" name="c" value="login_users">
                        <input type="hidden" id="id_user" name="id"> 

                        <div class="col-12 col-sm-6 col-lg-4 form-group">
                            <label for="nombre_user">NOMBRE:</label>
                            <input type="text" id="nombre_user" name="nombre" placeholder="nombre" class="form-control" required>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-4 form-group">
                            <label for="apellidos_user">APELLIDOS:</label>
                            <input type="text" id="apellidos_user" name="apellidos" placeholder="apellidos" class="form-control" required>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-4 form-group">
                            <label for="telefono_user">TELEFONO:</label>
                            <input type="text" id="telefono_user" name="telefono" placeholder="telefono" class="form-control">
                        </div>

                        <div class="col-12 col-sm-6 col-lg-4 form-group">
                            <label for="email_user">EMAIL:</label>
                            <input type="text" id="email_user" name="email" placeholder="email" class="form-control" required>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-4 form-group">
                            <label for="nick_user">USUARIO:</label>
                            <input type="text" id="nick_user" name="nick" placeholder="usuario" class="form-control" required>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-4 form-group">
                            <label for="pass_user">CONTRASEÃ‘A:</label>
                            <input type="password" id="pass_user" name="pass" placeholder="pass" class="form-control" required>
                        </div>

                        <div class="col-12 form-group">
                            <label for="palabra_clave">PALABRA CLAVE:</label>
                            <input type="text" id="palabra_clave" name="palabra_clave" placeholder="palabra clave" class="form-control" required>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-4 form-group">
                            <input type="submit" name="a" value="registrar" class="boton-contenido">
                        </div>
                    </form>
                </div>
            </div>   
        </div>
    </div>
{% endblock %}
